<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#2FAFAFAF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/btn_explorar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:drawableTop="@drawable/ic_search2"

            android:lines="1"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:text="Explorar"
            android:textAllCaps="false"
            android:textColor="@color/cor_menu_desativado"
            android:textSize="9sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_favoritos"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:drawableTop="@drawable/ic_favoritos"
            android:lines="1"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:text="Favoritos"
            android:textAllCaps="false"
            android:textColor="@color/cor_menu_desativado"
            android:textSize="9sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_viagens"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:drawableTop="@drawable/ic_airbnb"
            android:lines="1"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:text="Viagens"
            android:textAllCaps="false"
            android:textColor="@color/cor_menu_desativado"
            android:textSize="9sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_mensagens"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:drawableTop="@drawable/ic_mensagens"
            android:lines="1"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:text="Mensagens"
            android:textAllCaps="false"
            android:textColor="@color/cor_menu_desativado"
            android:textSize="9sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_conta"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:drawableTop="@drawable/ic_perfil"
            android:lines="1"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:text="Perfil"
            android:textAllCaps="false"
            android:textColor="@color/cor_menu_desativado"
            android:textSize="9sp"
            android:textStyle="bold" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>